{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "es2015",
            "dom"
        ],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "outDir": "../app",
        "rootDir": ".",
        "typeRoots": [
            "../node_modules/@types",
            "../node_modules"
        ],
        "types": [
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "compileOnSave": false
}
